@section table{
<script>
    var tEname;
    var tStartT;
    var tEndT;
    var tUserAuth = "";
    $(function () {
        mutation.setUserName(stateData, {item: 'userName',value: "@tUserName"});
        select(0);
        //初始
        if ("@tLoginUser") {
            getAuthority("@tLoginUser");
